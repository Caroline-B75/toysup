<div class="mb-5">
  <div class="indexheader">
  <h1>Clic sur le jouet qui te ferait plaisir</h1>
  </div>
  <ul>
    <div class="toycontainer">
      <% @toys.each do |toy| %>
        <div class="toycard d-flex flex-column" href="<% toy_path(toy) %>">
          <div class="toycard-main flex-grow-1">
            <li class="toyname"> <%= toy.name %></li>
            <li class="toyphoto"><%= cl_image_tag(toy.photo.key, height: 200, width: 170, crop: "fill") %></li>
          </div>
            <div class="toy-details border-top pt-2">
              <div class="toy-info">
                <li class="toy-info toy-cat"> <%= toy.category %></li>
                <li class="toy-info toy-price"> <%= toy.unit_price %> €</li>
              </div>
              <div class="toy-link-show">
                <%= link_to "Détails", toy_path(toy), class: "btn btn-primary btn-index-show" %>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </ul>
</div>
