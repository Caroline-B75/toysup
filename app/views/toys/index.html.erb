      <% @toys.each do |toy| %>
        <div class="toycard" href="<% toy_path(toy) %>">
          <li class="toyname"> <%= toy.name %></li>
          <li class="toyphoto"><%= cl_image_tag(toy.photo.key, height: 200, width: 170, crop: "fill") %><hr></li>
          <li class="toy-info toy-cat"> <%= toy.category %></li>
          <li class="toy-info toy-price"> <%= toy.unit_price %> â‚¬</li>
        </div>
      <% end %>
    </div>
