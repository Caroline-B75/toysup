<div class="container">

  <div class="container-show">

    <div class="container-left">
      <div class="show-title">
        <%= @toy.name %></h1>
      </div>
      <div class="container-left-image">
        <% if @toy.photo.attached? %>
        <%= cl_image_tag @toy.photo.key, height: 400, width: 400%>
        <% end %>
      </div>
    </div>

    <div class="container-right">
      <div class="container-right-detail">
        <h2>Description</h2>
        <p><%= @toy.description %></p>
      </div>

      <div class="container-right-detail">
        <h2>Prix par jour</h2>
        <p><%= @toy.unit_price %> €</p>
      </div>

      <div class="container-right-detail">
        <h2>Catégorie</h2>
        <p><%= @toy.category %></p>
      </div>
      <div class="container-right-links">
        <%= link_to "Louer", new_toy_rent_path(@toy), class: "btn-rent" %>
        <%= link_to "Retour", toys_path, class: "back-link"%>
      </div>
    </div>
    </div>

  </div>
</div>
