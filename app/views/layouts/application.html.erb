<!DOCTYPE html>
<html>
  <head>
    <title>Toysup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <div>
        <%= link_to (image_tag("logo_2.png")), root_path, class: "navbar-brand" %>
      </div>

      <div>
        <h3>toySup</h3>
      </div>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <%= image_tag "mickey.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile page", "#", class: "dropdown-item" %>
              <hr>
              <%= link_to "Current rental", "#", class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      </div>
    </div>


    <%= yield %>

    <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-github"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
      </div>
      <div class="footer-copyright">
        This playground is made with <i class="fas fa-heart"></i> at toySup
      </div>
    </div>

  </body>
</html>
