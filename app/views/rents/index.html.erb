<div class="rent-container">
  <h1>Mes locations</h1>
  <div class="rent-cards-inline">
    <% @rents.each do |rent|  %>
      <div class="rent-card">
        <div class="rent-status">
          <p><%= rent.status %></p>
        </div>
        <div class="rent-content">
          <div class="rent-info">
            <h5>Jouet :</h5>
            <p><%= Toy.find(rent.toy_id).name %></p>
            <h5>Loué par :</h5>
            <p><%= User.find(Toy.find(rent.toy_id).user_id).name %></p>
            <h5>Durée de la location :</h5>
            <p><%= rent.duration %> jours</p>
            <h5>Prix total de la location :</h5>
            <p><%= rent.price %>€</p>
            <%= link_to "Annuler ma location", rent_path(rent), method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: 'btn-cancel-rent' %>
          </div>
          <div class="rent-photo">
            <%= cl_image_tag Toy.find(rent.toy_id).photo.key, width: 200, height: 300, crop: :fill %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

