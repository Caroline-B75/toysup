<div class="rent-container">
  <h1>Récapitulatif de ma commande:</h1>
  <div class="rent-recap">
    <div class="rent-info">
      <h5>Jouet :</h5>
      <p><%= @toy.name %></p>
      <h5>Loué par :</h5>
      <p><%= @toy_user.name %></p>
      <h5>Prix de la location par jour :</h5>
      <p><%= @toy.unit_price %>€</p>
      <h5>Durée de la location :</h5>
      <p><%= @rent.duration %> jours</p>
      <h5>Prix total de la location :</h5>
      <p><%= @rent.price %>€</p>
      <%= link_to "Annuler ma location", rent_path, method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: 'btn-rent' %>
    </div>
     <div class="rent-photo">
      <%= cl_image_tag @toy.photo.key, width: 300, height: 415, crop: :fill %>
    </div>
  </div>
  <br>
  <%= link_to "Toutes mes locations", rents_path, class: 'btn-rent' %>
</div>
